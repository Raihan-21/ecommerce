                <div ><h2 class="itemname"><%=item.itemname %></h2></div>
                <div class="price"><% const price = new Intl.NumberFormat('id-ID', { style: 'currency', currency: 'IDR' }).format(item.price) %> <%= price %></div>
                <div class="desc">Order now!</div>
            </a>
            
        <% }) %>
