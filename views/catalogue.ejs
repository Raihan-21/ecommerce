<div class="container container-catalogue">
    <div class="categories">
        <div>Categories:</div>
        <form action="/catalogue">
            <input type="button" onclick="window.location.href = '/catalogue'" value="All" class="<% if(!category) { %>
            selected
            <% } else { %>
                ''
            <% } %>
            ">
            <input type="submit" value="Cake" name="category" class="<% if(category == 'Cake') { %>
                selected
                <% } else { %>
                    ''
                <% } %>
                ">
            <input type="submit" value="Frozen Food" name="category" class="<% if(category == 'Frozen Food') { %>
                selected
                <% } else { %>
                    ''
                <% } %>
                ">
        </form>
